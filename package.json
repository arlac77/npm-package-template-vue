{
  "keywords": [
    "web"
  ],
  "scripts": {
    "start": "rollup -c rollup.config.js -w",
    "test": "echo disabled",
    "prepare": "rollup -c rollup.config.js",
    "package": "npm-pkgbuild pkgbuild pacman makepkg"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.3.0",
    "vue": "^2.6.11",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0",
    "puppeteer": "^2.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-vue": "^5.1.6",
    "vue-template-compiler": "^2.6.10",
    "connect-history-api-fallback": "^1.6.0"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "config": {
    "api": "/api",
    "proxyTarget": "https://somewhere.com/",
    "urlPrefix": "/services/{{name}}/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/install.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=244.1"
    }
  },
  "template": {
    "inheritFrom": [
      "arlac77/npm-package-template-root",
      "arlac77/npm-package-template-travis",
      "arlac77/npm-package-template-rollup",
      "arlac77/npm-package-template-nginx",
      "arlac77/npm-package-template-pacman",
      "arlac77/npm-package-template-release"
    ],
    "usedBy": [
      "arlac77/hook-ci-frontend"
    ]
  }
}
